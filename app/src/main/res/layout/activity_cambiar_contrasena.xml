<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.theme.CambiarContrasenaActivity">

    <!-- 游댳 T칤tulo -->
    <TextView
        android:id="@+id/tvTituloCambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar contrase침a"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 游댳 Nueva contrase침a -->
    <EditText
        android:id="@+id/etNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Escribe la nueva contrase침a"
        android:paddingHorizontal="16dp"
        android:inputType="textPassword"
        android:background="@drawable/edittext_profile"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCambiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 游댳 Confirmar contrase침a -->
    <EditText
        android:id="@+id/etConfirmarContrasena"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirmar contrase침a"
        android:paddingHorizontal="16dp"
        android:inputType="textPassword"
        android:background="@drawable/edittext_profile"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etNuevaContrasena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 游댳 Bot칩n Guardar -->
    <Button
        android:id="@+id/btnGuardarCambios"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/etConfirmarContrasena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
