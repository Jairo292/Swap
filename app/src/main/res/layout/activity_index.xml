<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.theme.IndexActivity">

    <!-- 🔹 Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SWAP"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:hint="Buscar"
            android:paddingHorizontal="12dp"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:inputType="text"
            android:autofillHints="search" />

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            app:tint="#000000"
            android:contentDescription="Favoritos" />
    </LinearLayout>

    <!-- 🔹 Scroll general del feed -->
    <ScrollView
        android:id="@+id/scrollFeed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 🔹 Post individual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Header del post -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_default_avatar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Jairo - FCFM"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="• Hace 20 min"
                        android:textColor="#777777"
                        android:textSize="13sp" />

                    <!-- Espacio flexible que empuja el icono a la derecha -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- Ícono de guardar (alineado a la derecha) -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Guardar publicación"
                        android:src="@drawable/ic_save_black_24dp"
                        app:tint="#000000" />
                </LinearLayout>

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Me gustan las weritas"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Imagen del post -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post1"
                    android:background="@android:color/darker_gray" />

                <!-- Descripción extendida -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hace 3 años conocí a esta bella mujer gracias por estar conmigo siempre 💕"
                    android:textColor="#444444"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />

                <!-- Likes y comentarios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        app:tint="#000000"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Me gusta" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="540"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_comment_black_24dp"
                        app:tint="#000000"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Comentarios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 🔹 Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/casa1"
            android:contentDescription="Inicio" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="60dp"
            android:src="@drawable/mas1"
            android:contentDescription="Agregar publicación" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_avatar"
            android:contentDescription="Perfil" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
