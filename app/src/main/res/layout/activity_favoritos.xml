<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.theme.FavoritosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- 🔙 Flecha de regreso -->
        <ImageView
            android:id="@+id/ivBackFavoritos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:contentDescription="Regresar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 🏷️ Título -->
        <TextView
            android:id="@+id/tvTituloFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivBackFavoritos"
            app:layout_constraintBottom_toBottomOf="@id/ivBackFavoritos"
            app:layout_constraintStart_toEndOf="@id/ivBackFavoritos" />

        <!-- 🖼️ Post de ejemplo 1 -->
        <LinearLayout
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edittext_profile"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivBackFavoritos">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_post1"
                    android:layout_marginEnd="8dp" />

                <!-- Nombre y tiempo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jairo-FCFM"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hace 20 min"
                        android:textColor="#777777"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bookmark_black_24dp" />
            </LinearLayout>

            <!-- Texto principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me gustan las weritas"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:textSize="15sp"/>

            <!-- Imagen -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post2" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hace 3 años conocí a esta bella mujer. Gracias por estar conmigo siempre ❤️"
                android:textColor="#333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>

            <!-- Likes y comentarios -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="540"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 🖼️ Post de ejemplo 2 -->
        <LinearLayout
            android:id="@+id/post2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edittext_profile"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/post1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_post3"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADRIANA - COORDI"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hace 2 horas"
                        android:textColor="#777777"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bookmark_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me gusta este sonsito 😏"
                android:textColor="#000"
                android:layout_marginTop="4dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post4" />

            <!-- Likes y comentarios -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="270"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
