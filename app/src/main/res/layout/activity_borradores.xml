<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.theme.BorradoresActivity">

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/ivBackBorradores"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="Regresar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÃ­tulo de la ventana -->
    <TextView
        android:id="@+id/tvTituloBorradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borradores"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivBackBorradores"
        app:layout_constraintBottom_toBottomOf="@id/ivBackBorradores"
        app:layout_constraintStart_toEndOf="@id/ivBackBorradores"/>

    <!-- Lista de borradores (RecyclerView para futuras publicaciones) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBorradores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivBackBorradores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_borrador"/>

</androidx.constraintlayout.widget.ConstraintLayout>
